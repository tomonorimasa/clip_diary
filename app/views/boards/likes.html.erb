<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', q: @q_header, url: likes_boards_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @like_boards.present? %>
          <%= render @like_boards %>
        <% else %>
          <p><%= 'お気に入りクリップがありません' %></p>
        <% end %>
      </div>
      <%= paginate @like_boards %>
    </div>
  </div>
</div>