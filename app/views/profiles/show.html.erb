<div class="container pt-3">
  <div class="row">
  <h1 class="float-left mb-5"><%= "#{@user.decorate.nickname}のマイページ" %></h1>
    <div class="col-md-10 offset-md-1">
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4">プロフィール</h2>
          <% if @user.id == current_user.id %>
            <%= render 'mypage' %>
          <% else %>
            <%= render 'otherpage' %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4">自己紹介</h2>
          <% if @user.description.present? %>
            <p><%= @user.description %></p>
          <% else %>
            <p>まだ自己紹介文がありません。</p>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4">投稿クリップ一覧</h2>
          <div class="row">
            <% if @boards.present? %>
              <%= render @boards %>
            <% else %>
              <p><%= 'クリップを載せてみよう！' %></p>
            <% end %>
          </div>
          <%= paginate @boards %>
        </div>
      </div>

    </div>
  </div>
</div>