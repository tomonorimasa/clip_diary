<%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
  <table class="table">
    <tr>
      <th scope="row"><%= 'メールアドレス' %></th>
      <td><%= current_user.email %></td>
    </tr>
    <tr>
      <th scope="row"><%= 'ニックネーム' %></th>
      <td><%= current_user.decorate.nickname %></td>
    </tr>
    <tr>
      <th scope="row"><%= 'アバター画像' %></th>
      <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '75x75' %></td>
    </tr>
  </table>